<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sunny.readxml">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/view_xml_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:label="ReadXML">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="SaveAsActivity"
            android:name=".SaveAsActivity">
            <intent-filter>
                <action android:name="com.example.sunny.SaveAsActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <!--<meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sunny.readxml.MainActivity" /> -->
        </activity>
        <activity android:label="SaveFileActivity"
            android:name=".SaveFileActivity">
            <intent-filter>
                <action android:name="com.example.sunny.SaveFileActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />



</manifest>